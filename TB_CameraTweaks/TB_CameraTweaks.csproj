<Project Sdk="Microsoft.NET.Sdk">

	<Import Project="../GamePath.props" />

	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<AssemblyName>TB_CameraTweaks</AssemblyName>
		<Description>Timberborn Mod: Camera Tweaker</Description>
		<Version>1.0.0</Version>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<LangVersion>latest</LangVersion>
		<RestoreAdditionalProjectSources>
			https://api.nuget.org/v3/index.json;
			https://nuget.bepinex.dev/v3/index.json
		</RestoreAdditionalProjectSources>
		<RootNamespace>TB_CameraTweaks</RootNamespace>
		<Company>Kumare</Company>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="UI\bla.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\.editorconfig" Link=".editorconfig" />
		<None Include="UI\bla.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
		<PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
		<PackageReference Include="BepInEx.Core" Version="5.4.19" />
		<PackageReference Include="TimberAPI" Version="0.5.1" />
	</ItemGroup>

	<!--<ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
		<PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
	</ItemGroup>-->

	<!--COPY ON BUILD TO TARGET-->
	<Target Name="CopyToBepInExPlugins" AfterTargets="Build">
		<Copy SourceFiles="$(TargetPath)" DestinationFolder="$(TB_CameraTweaks)" />
		<Copy SourceFiles="$(TargetPath)" DestinationFolder="$(TB_CameraTweaks2)" />
		<!--<Copy SourceFiles="$(TargetDir)\$(TargetName).pdb" DestinationFolder="$(TB_CameraTweaks)" />-->
	</Target>

